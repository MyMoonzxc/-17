#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include<locale.h>

int main() {
    setlocale(LC_ALL, "RUS");
    int n;
    int* massiv = NULL;
    int i, j, temp;

    srand(time(NULL));

    // 1. Вводим размер
    printf("Введите размер массива: ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Ошибка, размер должен быть >0\n");
        return 0;
    }

    // 2. Выделяем память
    massiv = (int*)malloc(n * sizeof(int));
    if (massiv == NULL) {
        printf("Ошибка памяти\n");
        return 0;
    }

    // 3. Заполняем случайными числами
    printf("\nЗаполняем массив числами\n");
    for (i = 0; i < n; i++) {
        massiv[i] = rand() % 100 + 1;
    }

    // 4. Показываем исходный массив
    printf("Исходный массив:\n");
    for (i = 0; i < n; i++) {
        printf("%3d ", massiv[i]);
        if ((i + 1) % 10 == 0) printf("\n");
    }
    printf("\n\n");

    // 5. СОРТИРОВКА ПУЗЫРЬКОМ
    printf("Начинаем сортировку пузырьком\n");

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - 1 - i; j++) {
            
            if (massiv[j] > massiv[j + 1]) {
                
                temp = massiv[j];
                massiv[j] = massiv[j + 1];
                massiv[j + 1] = temp;
            }
        }

        // Показываем прогресс после каждого прохода
        printf("После прохода %d: ", i + 1);
        for (int k = 0; k < n; k++) {
            printf("%d ", massiv[k]);
        }
        printf("\n");
    }

    // 6. Показываем результат
    printf("\nГотовый массив:\n");
    for (i = 0; i < n; i++) {
        printf("%3d ", massiv[i]);
        if ((i + 1) % 10 == 0) printf("\n");
    }

    // 7. Освобождаем память
    free(massiv);

    printf("\n\nКонец программы.\n");

    return 0;
} 
